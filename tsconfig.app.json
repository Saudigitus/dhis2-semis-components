{
  "compilerOptions": {
    "baseUrl": ".",
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "es5",
    "useDefineForClassFields": true,
    "lib": [
      "es2021",
      "DOM",
      "DOM.Iterable"
    ],
    // "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "allowJs": true,
    "rootDir": "./src",
    "declarationDir": "./dist/declarations",
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/stories",
    "vite.config.ts",
    "dist",
    "eslint.config.js",
    "eslint.config.d.ts"
  ]
}